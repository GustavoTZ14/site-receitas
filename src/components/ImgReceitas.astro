---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface props {
  imagePath: string;
  altText: string;
  carregaImg: string;
}

const { 
  imagePath, 
  altText, 
  carregaImg
 }= Astro.props;

const images = import.meta.glob<{ 
    default: ImageMetadata 
}>('/src/assets/*.{webp,jpeg,jpg,png,gif}');

if(!images[imagePath]) throw new Error(
    `"${imagePath}" n√£o existe no glob: "src/assets/*.{webp}`
)
---
  <div class="card">
    <Image src={images[imagePath]()} alt={altText} loading={carregaImg}/>
  </div>
<style>
.card{
  width: 1000px;
  height: 600px;
  border-radius: 5px;
  margin: 20px 0;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
}

.card img{
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

@media (max-width: 950px) {
  .card{
    display: block;
    width: 90%;
    height: 100%;
    margin: auto;
  }

  .card img{
    width: 100%;
    height: 100%;
    border-radius: 5px;
  }
}
</style>
