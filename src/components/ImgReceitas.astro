---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface props {
    imagePath: string;
    altText: string;
    carregaImg: string;
}

const { imagePath, altText, carregaImg }= Astro.props;
const images = import.meta.glob<{ 
    default: ImageMetadata 
}>('/src/assets/*.{webp,jpeg,jpg,png,gif}');

if(!images[imagePath]) throw new Error(
    `"${imagePath}" n√£o existe no glob: "src/assets/*.{webp}`
)
---
<div class="div--img__receitas">
  <Image src={images[imagePath]()} alt={altText} loading={carregaImg}/>
</div>
<style>
.div--img__receitas{
  width: 75%;
  margin: auto;
  height: 60vh;
  border-radius: 5px;
}

.div--img__receitas img{
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

@media (max-width: 950px) {
  .div--img__receitas{
    width: 90%;
    height: 50%;
  }
}
</style>
