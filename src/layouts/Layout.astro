---
import HeadTitle from "../components/HeadTitle.astro";
const {titulo} = Astro.props;
---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/chef.svg" />
		<meta name="description" content="Aprenda a cozinhar receitas deliciosas e fáceis com nosso site de receitas passo a passo.">
		<meta name="generator" content={Astro.generator} />
		<HeadTitle titulo={titulo}/>
	</head>
	<body>
		<header class="top">
			<div><a href="/">Chefnacozinha.com</a></div>
  		<form id="formulario">
    		<input type="text" id="inSearch" placeholder="Pesquise por Receitas">
    		<button type="submit" id="btSearch" class="botaoSearch">
      		<img src="/search.svg" alt="botão pesquisar"> 
      	</button>
    		<div id="resultado"></div>
  		</form>
  		<script src="../scripts/scriptSearch.js"></script>
		</header>
		<aside class="menu">
			<ul>
       	<li><a href="/categorias/comidas-caseiras">Comidas Caseiras</a></li>
        <li><a href="/categorias/culinaria-estrangeira">Culinária Estrangeira</a></li>
        <li><a href="/categorias/doces-e-salgados">Doces e Salgados</a></li>
        <li><a href="/categorias/legumes-e-verduras">Legumes e Verduras</a></li>
        <li><a href="/categorias/pratos-principais">Pratos Principais</a></li>
        <li><a href="/categorias/receitas-diversas">Receitas Diversas</a></li>
        <li><a href="/categorias/receitas-rapidas">Receitas Rapidas</a></li>
        <li><a href="/categorias/bolos">Bolos</a></li>
        <li><a href="/categorias/tortas">Tortas</a></li>
        <li><a href="/categorias/carnes">Carnes</a></li>
    	</ul>
		</aside>
		<main class="mid">
			<slot/>
		</main>
		<footer class="bot">
			<div class="bot--card">
    		<ul class="card--info">
      		<li><a href="">Politicas de Privacidade</a></li>
      		<li><a href="">Termos de Uso</a></li>
    		</ul>
    		<div class="bot--cp"><p>@Copyright (c) 2025 Chefnacozinha.com</p></div>
  		</div>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		display: flex;
		flex-direction: column;
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.mid{
		flex: 1;
	}
 	.top{
    display: flex;
    justify-content: space-around;
    padding: 20px;
    align-items: center;
  }

  .top a{
    text-decoration: none;
    color: #000000;
  }

  #inSearch{
    width: 300px;
    height: 30px;
    border: 1px solid #C0C0C0;
    border-radius: 5px 0 0 5px;
    outline: none;
    padding-left: 10px;
    position: relative;
  }

  .botaoSearch{
    position: absolute;
    width: 35px;
    height: 34px;
    outline: none;
    border: 1px solid #C0C0C0;
    border-radius: 0 5px 5px 0;
  }

  #resultado{
    display: none;
    position: absolute;
    width: 300px;
    max-height: 400px;
    overflow: scroll;
    border: 1px solid #C0C0C0;
    border-radius: 5px;
    background-color: #ffffff;
    padding: 5px;
  }
	.menu{
    display: flex;
    justify-content: center;
  }

 	.menu ul{
    display: flex;
    gap: 30px;
 	}

  .menu li, a{
    list-style-type: none;
    text-decoration: none;
    color: #000000;
  }

	.bot{
    display: flex;
    padding-top: 20px;
    justify-content: center;
  }

  .bot--card{
    display: block;
    text-align: center;
  }

  .card--info{
    margin: 0;
    padding: 0;
  }
  
  .card--info li{
    list-style-type: none;
    line-height: 30px;
  }

  .card--info a{
    text-decoration: none;
    color: #000000;
  }

  .bot--cp p{
    font-size: 12px;
  }

  @media (max-width: 950px) {
    .top{
      display: grid;
      justify-content: center;
      text-align: center;
    }

    #inSearch{
      border-radius: 5px;
      margin: 20px;
    }

    .botaoSearch{
      display: none;
    }

		.menu{
      display: none;
    }

    .menu ul{
      display: none;
    }

  }

</style>
