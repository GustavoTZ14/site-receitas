---
import HeadTitle from "../components/HeadTitle.astro";
const {titulo} = Astro.props;
---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/chef.svg" />
		<meta name="description" content="Aprenda a cozinhar receitas deliciosas e fáceis com nosso site de receitas passo a passo.">
		<script type="text/javascript" src="https://platform-api.sharethis.com/js/sharethis.js#property=67e070ecf80bb90012168079&product=inline-share-buttons&source=platform" async="async"></script>
		
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-M6GEZ3Z9CB"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-M6GEZ3Z9CB');
    </script>

		<meta name="generator" content={Astro.generator} />
		<HeadTitle titulo={titulo}/>
	</head>
	<body>
		<header class="top">
			<div class="top--logo"><a href="/">Chefnacozinha.com</a></div>
  		<form id="formulario">
    		<input type="text" id="inSearch" placeholder="Pesquise por Receitas">
    		<button type="submit" id="btSearch" class="botaoSearch">
      		<img src="/search.svg" alt="botão pesquisar"> 
      	</button>
    		<div id="resultado"></div>
  		</form>
		</header>
		<aside class="menu">
			<ul>
        <li><a href="/categorias/pratos-principais">Pratos Principais</a></li>
        <li><a href="/categorias/carnes">Carnes</a></li>
        <li><a href="/categorias/tortas">Tortas</a></li>
        <li><a href="/categorias/doces-e-salgados">Doces e Salgados</a></li>
        <li><a href="/categorias/massas">Massas</a></li>
        <li><a href="/categorias/peixes-e-frutos-do-mar">Peixes e Frutos do Mar</a></li>
        <li><a href="/categorias/saladas-e-verduras">Saladas e Verduras</a></li>
    	</ul>
		</aside>
		<main class="mid">
		  <section class="secao"><slot/></section>
		  <div class="sharethis-inline-share-buttons"></div>
		</main>
		<footer class="bot">
			<div class="bot--card">
    		<ul class="card--info">
      		<li><a href="/politica-de-privacidade">Politicas de Privacidade</a></li>
      		<li><a href="/termos-de-uso">Termos de Uso</a></li>
    		</ul>
    		<div class="bot--cp"><p>@Copyright (c) 2025 Chefnacozinha.com</p></div>
  		</div>
		</footer>
  	<script src="../scripts/scriptSearch.js"></script>
	</body>
</html>

<style>
@import url('https://fonts.googleapis.com/css2?family=Tangerine:wght@400;700&display=swap');

	html,
	body {
		display: flex;
		flex-direction: column;
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.mid{
		flex: 1;
}

.secao{
  display: block;
  width: 70%;
  margin: auto;
}

 	.top{
    display: flex;
    justify-content: space-around;
    padding: 20px;
    align-items: center;
  }

  .top--logo a{
    text-decoration: none;
    color: #000000;
    letter-spacing: 1px;
    font-family: "Tangerine", cursive;
    font-weight: 700;
    font-style: normal;
    font-size: 35px;
  }

  #inSearch{
    width: 300px;
    height: 30px;
    border: 1px solid #C0C0C0;
    border-radius: 5px;
    outline: none;
    padding-left: 10px;
    position: relative;
  }

  .botaoSearch{
    position: absolute;
    width: 40px;
    height: 33.5px;
    outline: none;
    border: 1px solid #C0C0C0;
    border-radius: 5px;
  }

  #resultado{
    display: none;
    position: absolute;
    width: 300px;
    max-height: 400px;
    overflow-y: scroll;
    border: 1px solid #C0C0C0;
    border-radius: 5px;
    background-color: #ffffff;
  padding: 5px;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
  }
	.menu{
    display: flex;
  justify-content: center;
  padding-bottom: 20px;
  }

 	.menu ul{
    display: flex;
    gap: 30px;
 	}

  .menu li, a{
    list-style-type: none;
    text-decoration: none;
    color: #000000;
  }

	.bot{
    display: flex;
    padding-top: 20px;
    justify-content: center;
  }

  .bot--card{
    display: block;
    text-align: center;
  }

  .card--info{
    margin: 0;
    padding: 0;
  }
  
  .card--info li{
    list-style-type: none;
    line-height: 30px;
  }

  .card--info a{
    text-decoration: none;
    color: #000000;
  }

  .bot--cp p{
    font-size: 12px;
  }

  @media (max-width: 950px) {
    .top{
      display: grid;
      justify-content: center;
    }

    .top--logo{
      text-align: center;
      padding-bottom: 20px;
    }
    
  #formulario{
    position: relative;
  }
   
  .botaoSearch{
    position: absolute;
    right: 0;
  }

  .menu{
    display: none;
  }

    .menu ul{
    display: flex;
    overflow-x: scroll;
    align-items: center;
    padding: 10px;
  }

  .menu a{
    display: inline-flex;
    text-wrap: nowrap;
  }

  .secao{
    display: block;
    width: 100%;
  }
  }

</style>
