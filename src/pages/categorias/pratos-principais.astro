---
import CardReceitas from "../../components/CardReceitas.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout titulo="Pratos Pricipais">
  <h4 class="Top--title">Pratos Pricipais</h4>
    <section class="mid--secao">
      <CardReceitas
        imagePath="/src/assets/bifes-com-molho-de-pimenta-verde.webp"
        altText="bifes com molho"
        carregaImg="eager"
        name="Bifes com Molho de Pimenta Verde"
        diretorio="/receitas/bifes-com-molho-de-pimenta-verde"
      />
      <CardReceitas
        imagePath="/src/assets/cozido-de-carne-com-bolinhos.webp"
        altText="cozido de carne"
        carregaImg="eager"
        name="Cozido de Carne com Bolinhos"
        diretorio="/receitas/cozido-de-carne-com-bolinhos"
      />
      <CardReceitas
      imagePath="/src/assets/enrolado-de-carne.webp"
        altText="enrolado de carne"
        carregaImg="eager"
        name="Enrolado de Carne"
        diretorio="/receitas/enrolado-de-carne"
      />
      <CardReceitas
        imagePath="/src/assets/ensopado-de-carne-a-flamenga.webp"
        altText="ensopado de carne"
        carregaImg="eager"
        name="Ensopado de Carne a Flamenga"
        diretorio="/receitas/ensopado-de-carne-a-flamenga"
      />
      <CardReceitas
        imagePath="/src/assets/espetinhos-de-damasco.webp"
        altText="espetinhos"
        carregaImg="eager"
        name="Espetinhos com Damasco"
        diretorio="/receitas/espetinhos-com-damasco"
      />
      <CardReceitas
      imagePath="/src/assets/folhados-de-peru.webp"
        altText="salgados com recheio de peru"
        carregaImg="eager"
        name="Folhados de Peru"
      diretorio="/receitas/folhados-de-peru"
      />
      <CardReceitas
      imagePath="/src/assets/frango-a-paprica.webp"
        altText="frango assado com molho por cima"
        carregaImg="eager"
        name="Frango à Páprica"
      diretorio="/receitas/frango-a-paprica"
      />
      <CardReceitas
      imagePath="/src/assets/frango-ao-limao-no-forno.webp"
        altText="frango assado com limão"
        carregaImg="eager"
        name="Frango ao Limão no Forno"
      diretorio="/receitas/frango-ao-limao-no-forno"
      />
      <CardReceitas
      imagePath="/src/assets/frango-crocante.webp"
        altText="frango com a textura crocante"
        carregaImg="eager"
        name="Frango Crocante"
      diretorio="/receitas/frango-crocante"
      />
      <CardReceitas
      imagePath="/src/assets/frango-frito-no-forno.webp"
        altText="frango frito"
        carregaImg="eager"
        name="Frango Frito no Forno"
      diretorio="/receitas/frango-ao-limao-no-forno"
      />
      <CardReceitas
      imagePath="/src/assets/frango-recheado-com-agriao.webp"
        altText="frango assado recheado"
        carregaImg="eager"
        name="Frango Recheado com Agrião"
      diretorio="/receitas/frango-recheado-com-agriao"
      />
      <CardReceitas
      imagePath="/src/assets/macarrao-a-napolitana.webp"
        altText="macarrão"
        carregaImg="eager"
        name="Macarrão a Napolitana"
      diretorio="/receitas/macarrao-a-napolitana"
      />
      <CardReceitas
      imagePath="/src/assets/pescadinhas-com-laranja.webp"
        altText="peixe com laranja"
        carregaImg="eager"
        name="Pescadinhas com Laranja"
      diretorio="/receitas/pescadinhas-com-laranja"
      />
      <CardReceitas
      imagePath="/src/assets/porco-com-macas.webp"
        altText="porco assado com maçãs"
        carregaImg="eager"
        name="Porco com Maçãs"
      diretorio="/receitas/porco-com-macas"
      />
      <CardReceitas
      imagePath="/src/assets/robalo-com-tomate-ao-vinho-branco.webp"
        altText="peixe robalo com vinho"
        carregaImg="eager"
        name="Robalo com Tomate ao Vinho Branco"
      diretorio="/receitas/robalo-com-tomate-ao-vinho-branco"
      />
      <CardReceitas
      imagePath="/src/assets/salada-de-frango-crocante.webp"
        altText="salada de frango"
        carregaImg="eager"
        name="Salada de Frango Crocante"
      diretorio="/receitas/salada-de-frango-crocante"
      />
      <CardReceitas
      imagePath="/src/assets/sardinhas-grelhadas.webp"
        altText="peixe sardinha grelhada"
        carregaImg="eager"
        name="Sardinhas Grelhadas"
      diretorio="/receitas/sardinhas-grelhadas"
      />
      <CardReceitas
      imagePath="/src/assets/torta-de-peixe.webp"
        altText="torta feita com peixe"
        carregaImg="eager"
        name="Torta de Peixe"
      diretorio="/receitas/torta-de-peixe"
      />
    </section>
</Layout>
<style>
  .Top--title{
    text-align: center;
    margin-bottom: 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .mid--secao{
    display: flex;
    flex-wrap: wrap;
    width: 90%;
    margin: auto;
    padding: 20px 0 50px 0;
    justify-content: center;
    gap: 10px;
  }
</style>
